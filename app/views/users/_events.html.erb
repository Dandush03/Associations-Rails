<h1>Events to Come</h1>
<% @present_events.each do |e| %>
	<ul>
		<li>Owner: <%= User.find_by_id(e.user_id).name %></li>
		<li>Location: <%= e.location %></li>
		<li>Date: <%= e.event_date %></li>
		<%= link_to 'Attend', attend_path(:event_id => e.id), method: :post unless current_user.nil? || e.user_id == current_user.id %>
	</ul>
<% end %>
<br>
<br>
<h1>Pasts Events</h1>
<% @past_events.each do |e| %>
	<ul>
		<li>Owner: <%= User.find_by_id(e.user_id).name %></li>
		<li>Location: <%= e.location %></li>
		<li>Date: <%= e.event_date %></li>
	</ul>
<% end %>

