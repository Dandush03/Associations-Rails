<%= form_for @event do |event| %>
	<%= event.label :name, :value => current_user.name%>
	<br>
	<%= event.text_field :location, :placeholder => 'Location'%>
	<br>
	<%= event.text_field :description, :placeholder => 'description'%>
	<br>
	<%= event.date_field :event_date %>
	<br>
	<%= event.submit 'submit' %>
<%end%>
